{# Begin getquote #}
{% set root = '/CoverMore-UI/patterns' %}

<section class="section section--getquote getquote">
  <div class="grid-container">
    <div class="grid-x grid-margin-x">
      <div class="cell ">
        <div class="getquote__inner">
          <div class="getquote__header">
            <h2 class="getquote__title">Get a Travel Insurance Quote</h2>
          </div>
          <div class="getquote__body">

            {# https://get.foundation/sites/docs/forms.html #}
            <form>
              <div class="grid-container">
                <div class="grid-x grid-padding-x">
                  <div class="medium-4 cell cell--right-split">
                    <h3 class="getquote--h3">Where are you going?</h3>
                    {% include "@atoms/forms/select-menu.twig" with destination_select %}
                  </div>
                  <div class="medium-4 cell cell--right-split">
                    <h3 class="getquote--h3">When are you going?</h3>
                    <div>
                      <label class="label--getquote">Departure Date
                      </label>
                      <input class="radius" type="text" placeholder="mm/dd/yyyy">
                    </div>
                    <div>
                      <label class="label--getquote">Return Date
                      </label>
                      <input class="radius" type="text" placeholder="mm/dd/yyyy">
                    </div>
                  </div>
                  <div class="medium-4 cell">
                    <h3 class="getquote--h3">Who is traveling?</h3>

                    {% include "@atoms/forms/select-menu.twig" with residence_select %}

                    <div class="grid-x grid-padding-x--10">
                      <div class="cell small-3">
                        <div class="form-group">
                          <label class="label--getquote">Age</label>
                          <input class="radius" type="text" placeholder=".medium-6.cell">
                        </div>
                      </div>
                      <div class="cell auto">
                        <div class="form-group">
                          <label class="label--getquote">Trip Cost</label>
                          <input class="radius" type="text" placeholder=".medium-6.cell">
                        </div>
                      </div>
                      <div class="cell shrink">
                        <div class="form-group">
                          <label class="label--getquote">Add</label>
                          <div class="input__div">
                            <button class="button secondary rounded btn--getquote-add" href="#">
                              +
                            </button>
                          </div>
                        </div>


                      </div>

                    </div>
                  </div>
                </div>
              </div>
            </form>
          </div>
          <div class="getquote__footer">
            <div class="grid-container">
              <div class="grid-x grid-padding-x">
                <div class="cell medium-4 large-offset-8 medium-offset-8">
                  {# <a class="button secondary expanded no-margin button--getquote-submit" #}
                  {# href="{{root}}/templates-theme-farmers-addon-page/templates-theme-farmers-addon-page.html">Get a Quote</a> #}
                  <a class="button secondary expanded no-margin button--getquote-submit"
                  href="{{root}}/templates-theme-farmers-planpage/templates-theme-farmers-planpage.html">Get a Quote</a>
                </div>
              </div>
            </div>
          </div>

        </div>
      </div>
    </div>
  </div>

  <div class="getquote__bg">
    <figure class="orbit-figure">
      <img src="{{ img.getquote__bg.src }}" alt="{{ img.getquote__bg.alt }}"/>
    </figure>
  </div>
</section>
{# End getquote #}
